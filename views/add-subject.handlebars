<div class="container">
  <div class="box m-6">
    <div class="row justify-content-md-center">
      <h2 class="title">Add New Subject</h2>
      <hr>
      <form class="new-post-form" id="add-subject">
        <div class="card">
          <input class="input" type="text" id="subject-name" placeholder="Subject Name" />
          <button type="submit" class="button is-green has-text-white is-fullwidth">Add Subject</button>
        </div>
      </form>
    </div>
  </div>

  <div class="box m-6">
    <h3>All Subjects</h3>
    {{#if subjects.length}}
    <ul id="subject-list">
      {{#each subjects as |subject|}}
      <li> {{>subject-info subject}}</li>
      {{/each}}
    </ul>
    {{/if}}
  </div>

</div>

<script src="/javascript/add-subject.js"></script>
<script src="/javascript/delete-subject.js"></script>