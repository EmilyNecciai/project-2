<div class="container login">

  <div class="box">
    <form class="login-form" id="login-form">
      <div class="image-login">
        <img class="login-icon" src="../images/loginicon.png" class="img-fluid img-thumbnail rounded-circle"
          alt="cloud with lighthning bolt">
      </div>

      <div class="field">
        <label for="email-login" class="label">Email</label>
        <div class="control has-icons-left has-icons-right">
          <input type="text" id="email-login" class="input" />
          <span class="icon is-small is-left">
            <i class="fas fa-envelope"></i>
          </span>
        </div>
        <p class="help">We'll never share your email with anyone else.</p>

      </div>

      <div class="field">
        <label for="password-login" class="label">Password</label>
        <div class="control has-icons-left has-icons-right">

          <input type="password" id="password-login" class="input" />
          <span class="icon is-small is-left">
            <i class="fas fa-key"></i>
          </span>
        </div>
      </div>

      <div class="control">
        <button type="submit" class="button is-green is-fullwidth login-button">Login</button>
      </div>

    </form>

  </div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
<script src="/javascript/login.js"></script>